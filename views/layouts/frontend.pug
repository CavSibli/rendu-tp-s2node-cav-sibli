doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.css")
        link(rel="stylesheet", href="/css/styles.css")
        script(src="//unpkg.com/jquery@3.1.1/dist/jquery.min.js")
        script(src="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.js")
        block scripts

        title Hello Express Pug App!
    body

        .ui.inverted.menu
            a(href="/").item.active
                i.home.icon
                | Home
            a(href="/dashboard").item
                i.file.icon
                | Posts


        if messages.error && messages.error.length > 0
            .ui.negative.message
                i.close.icon
                .content
                    .header= messages.error

        if messages.success && messages.success.length > 0
            .ui.positive.message
                i.close.icon
                .content
                    .header= messages.success

        block content